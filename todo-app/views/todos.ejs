<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        async function updateTodo(id) {
            await fetch(`/todos/${id}`, {
                    method: 'put',
                    headers: {
                        "Content-Type": "application/json"
                    },
                })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.log(err));
        }

        async function deleteTodo(id) {
            await fetch(`/todos/${id}`, {
                    method: 'delete',
                    headers: {
                        "Content-Type": "application/json"
                    },
                })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.log(err));
        }
    </script>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <div class="grid grid-cols-6 gap-4">
            <div class="col-start-2 col-span-3 bg-white p-6 rounded shadow-md">
                <%- include('header.ejs') %>
                <button><a href="/signout" class="text-blue-500 hover:underline">Sign Out</a></button>
                <form action="/todos" method="post" class="mt-4">
                    <div class="flex gap-2">
                        <div class="flex-auto">
                            <input type="text" name="title" placeholder="What's next?" required
                                class="border border-gray-300 rounded p-2 text-sm w-full">
                        </div>
                        <div class="flex-auto">
                            <input type="date" name="dueDate" required
                                class="border border-gray-300 rounded p-2 text-sm w-full">
                        </div>
                        <div class="flex-none">
                            <button type="submit"
                                class="bg-green-600 text-white px-5 py-2 rounded font-medium">Add</button>
                        </div>
                    </div>
                </form>
                <%- include('notifications.ejs') %>
                <%- include('todo.ejs') %>
            </div>
        </div>
    </div>
</body>

</html>
